{
  "name": "content-feature",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "content/feature/src",
  "prefix": "dev",
  "tags": ["type:feature", "scope:content", "side:client"],
  "projectType": "library",
  "targets": {
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "content/feature/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "content/feature/**/*.ts",
          "content/feature/**/*.html"
        ]
      }
    }
  }
}
